<div class="container">
  <h1> Applicant's Answers </h1>
  <hr>
  <h3 class="text-right">Final Score : <%= @test.score %> / 20 (<%= (@test.score*100)/20 %>%)</h3>
  <h4><p align="right">Total Time Taken: <%= @test.time_taken %></p></h4>
  
  <br>
  <table class="table table-striped table-bordered">
    <tr>
      <th>#</th>
      <th>Question</th>
      <th>Applicant's Answer</th>
      <th>Points</th>
    </tr>
    <% @answers.each_with_index do |answer, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= answer.question_name %></td>
        <td><%= image_tag(answer.applicant_answer) %></td>
        <td><%= answer.is_correct %></td>
      </tr>
    <% end %>
  </table>
  <%= link_to "Back", tests_path, :class => "btn btn-primary" %>
  <p>
</div>